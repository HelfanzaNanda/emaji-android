<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.task.TaskActivity">

    <include layout="@layout/shape_view"/>

    <RelativeLayout
        android:layout_margin="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <TextView
            android:textColor="@color/white"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="5dp"
            android:id="@+id/text_title"
            android:gravity="center_horizontal"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:textColor="@color/white"
            android:layout_marginBottom="20dp"
            android:layout_below="@id/text_title"
            android:id="@+id/text_sub_title"
            android:gravity="center_horizontal"
            android:textSize="16sp"
            android:text="smoke tester"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>


        <com.google.android.material.card.MaterialCardView
            android:layout_below="@id/text_sub_title"
            app:cardCornerRadius="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_margin="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_marginBottom="10dp"
                    android:id="@+id/layout_tools_used"
                    android:weightSum="2"
                    android:orientation="horizontal"
                    android:padding="6dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_weight="0.8"
                        android:text="Alat Yang di Gunakan : "
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:layout_weight="1.2"
                        android:id="@+id/text_tools_used"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_below="@id/layout_tools_used"
                    android:layout_marginBottom="10dp"
                    android:id="@+id/title_task"
                    android:weightSum="2"
                    android:orientation="horizontal"
                    android:padding="6dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_gravity="center_vertical"
                        android:layout_weight="0.5"
                        android:text="Pertanyaan"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                    <LinearLayout
                        android:layout_weight="1.5"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:text="Jawaban"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>

                        <LinearLayout
                            android:weightSum="1"
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                android:layout_weight="0.5"
                                android:text="Ya"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"/>

                            <TextView
                                android:layout_weight="0.5"
                                android:text="Tidak"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"/>

                        </LinearLayout>


                    </LinearLayout>


                </LinearLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:layout_below="@id/title_task"
                    android:layout_marginBottom="10dp"
                    android:id="@+id/recycler_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_below="@id/recycler_view"
                    android:hint="Catatan"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                    app:boxBackgroundColor="@android:color/transparent"
                    app:errorEnabled="true"
                    android:id="@+id/error_note"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:id="@+id/input_note"
                        android:inputType="textMultiLine"
                        android:layout_height="wrap_content"/>

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_choose_photo"
                    android:backgroundTint="@color/light__blue"
                    android:text="Pilih Foto"
                    android:layout_below="@id/error_note"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </RelativeLayout>

        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.button.MaterialButton
            android:layout_alignParentBottom="true"
            android:backgroundTint="@color/light__blue"
            app:cornerRadius="8dp"
            android:text="simpan"
            android:id="@+id/btn_submit_tasks"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>


    </RelativeLayout>


    <ProgressBar
        android:id="@+id/loading"
        android:layout_centerInParent="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</RelativeLayout>
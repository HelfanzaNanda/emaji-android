<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.login.LoginActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <include layout="@layout/shape_view"/>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_marginTop="70dp"
                android:weightSum="1"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_weight="0.5"
                    android:src="@drawable/kab_pekalongan"
                    android:layout_width="80dp"
                    android:layout_height="80dp"/>

                <ImageView
                    android:layout_weight="0.5"
                    android:src="@drawable/perhubungan"
                    android:layout_width="80dp"
                    android:layout_height="80dp"/>

            </LinearLayout>

            <TextView
                android:layout_marginTop="20dp"
                android:id="@+id/text_name_app"
                android:gravity="center"
                android:textStyle="bold"
                android:textSize="18sp"
                android:textColor="@color/white"
                android:text="E-maintenance Alat Uji"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_login"
                android:layout_margin="30dp"
                android:layout_marginTop="20dp"
                app:cardCornerRadius="8dp"
                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:padding="20dp"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_marginBottom="20dp"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:text="Login Account"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                    <com.google.android.material.textfield.TextInputLayout
                        android:hint="Email"
                        app:boxBackgroundColor="@android:color/transparent"
                        app:errorEnabled="true"
                        android:id="@+id/error_email"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <com.google.android.material.textfield.TextInputEditText
                            android:layout_width="match_parent"
                            android:id="@+id/input_email"
                            android:inputType="textEmailAddress"
                            android:layout_height="wrap_content"/>

                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:hint="Passowrd"
                        app:boxBackgroundColor="@android:color/transparent"
                        app:errorEnabled="true"
                        app:passwordToggleEnabled="true"
                        android:id="@+id/error_password"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <com.google.android.material.textfield.TextInputEditText
                            android:layout_width="match_parent"
                            android:id="@+id/input_password"
                            android:inputType="textPassword"
                            android:layout_height="wrap_content"/>

                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.button.MaterialButton
                        android:backgroundTint="@color/light__blue"
                        android:id="@+id/btn_login"
                        app:cornerRadius="6dp"
                        android:text="Login"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>



        <ProgressBar
            android:visibility="gone"
            android:id="@+id/loading"
            android:layout_centerInParent="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </RelativeLayout>

</ScrollView>